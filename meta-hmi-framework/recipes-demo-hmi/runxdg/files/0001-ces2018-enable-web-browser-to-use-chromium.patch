From: Harunobu Kurokawa <harunobu.kurokawa.dn@renesas.com>
Date: Sun, 31 Dec 2017 22:37:00 +0900
Subject: [PATCH] [ces2018] enable web-browser to use chromium

Signed-off-by: Harunobu Kurokawa <harunobu.kurokawa.dn@renesas.com>
---
 package/webbrowser/runxdg.toml | 21 ++++++++++++---------
 1 file changed, 12 insertions(+), 9 deletions(-)

diff --git a/package/webbrowser/runxdg.toml b/package/webbrowser/runxdg.toml
index ed275e4..992b50c 100644
--- a/package/webbrowser/runxdg.toml
+++ b/package/webbrowser/runxdg.toml
@@ -8,15 +8,18 @@ method = "POSIX"
 
 # path: path to the executable
 # e.g.
-#   path = "/usr/bin/chromium"
-path = "/usr/bin/weston-simple-egl"
+path = "/usr/bin/chromium"
+#path = "/usr/bin/weston-simple-egl"
 
 # params: arguments of the excecutable
 # e.g.
-#   params = [
-#     "--mus",
-#     "--no-sandbox",
-#     "--window-size=1080,1488",
-#     "--ozone-platform=wayland",
-#     "<URL>"
-#   ]
+   params = [
+     "--mus",
+     "--no-sandbox",
+     "--window-size=1080,1488",
+     "--ozone-platform=wayland",
+     "--touch-events=enabled",
+     "--enable-wayland-ime",
+     "--use-ime-service",
+     "http://www.google.com/maps"
+   ]
